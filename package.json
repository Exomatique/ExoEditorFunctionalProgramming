{
	"name": "exoeditorfunctionalprogramming",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"clean": "rm -rf ./build && rm -rf src/generated && rm -rf grammar/.antlr",
		"generate": "java -jar node_modules/antlr4ng-cli/*.jar -Dlanguage=TypeScript -o src/generated/ -visitor -listener grammar/*",
		"dev": "vite dev",
		"build": "npm run generate && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "^3.1.1",
		"@skeletonlabs/skeleton-svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@exomatique/editor": "^1.3.0",
		"antlr4ng": "^3.0.16",
		"antlr4ng-cli": "^2.0.0"
	}
}
